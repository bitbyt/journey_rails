<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.text_area :content, placeholder: "Post a comment.", rows: "5", class: "form-control form-textarea" %>
  <div class="form-btn-ctrl">
    <%= f.submit "Comment", class: "btn btn-post btn-lg btn-primary" %>
  </div>
<% end %>
